aws_region = "us-east-2"
instance_name = "terraform-web-server"
environment = "dev"
instance_type = "t2.micro"
root_volume_size = 8
ssh_allowed_cidr = ["YOUR_IP_ADDRESS/32"]  # Replace with your IP for secure SSH access
key_pair_name = "my-terraform-key"         # Name for the key pair in AWS
public_key_path = "~/.ssh/id_rsa.pub"      # Path to your public key file
subnet_id = ""                             # Optional: Specify to launch in a specific subnet